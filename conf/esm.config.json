{
	"esm": {
		"favicon": "/favicon.ico",

		"logo": "/logo.gif",
		"logo_text": "OPW",
		"logo_href": "http://intranet/",

		"sublogo_text": "Oifig na nOibreacha Poibli",
		"sublogo_href": "http://intranet/",
		
		"banner_top": "OPW Zarafa Dashboard ({{esm:hostname}})",
		"banner_bottom": "{{esm:os}}({{esm:release}}) Up Since: {{esm:uptime}}",

        "title": "OPW Zarafa Dashboard",

		"check_updates": false,
		"auto_refresh": 300,
		"theme": "light",

        "layout": [ 
            ["50-50",["system", "load_average"]],
            ["50-50",["network", "cpu"]],
            ["100",["disk"]],
            ["50-50",["memory","swap"]],
            ["33-33-33",["last_login","ping","services"]]
        ] 
	},

	"cpu": {
		"enable_temperature": false
	},

	"services": {
		"show_port": true,
		"list": [
			{
				"name": "Database Server",
				"host": "10.200.200.22",
				"port": 3306,
				"protocol": "tcp"
			},      
			{
				"name": "Zarafa Server",
				"host": "localhost",
				"port": 236,
				"protocol": "tcp"
			},
			{
				"name": "Email Server (incoming)",
				"host": "localhost",
				"port": 25,
				"protocol": "tcp"
			},
			{
				"name": "Email Server (outgoing)",
				"host": "localhost",
				"port": 587,
				"protocol": "tcp"
			},
			{
				"name": "Zarafa Web",
				"host": "10.200.200.25",
				"port": 443,
				"protocol": "tcp"
			},
			{
				"name": "Zarafa Activesync",
				"host": "10.200.200.30",
				"port": 443,
				"protocol": "tcp"
			},
			{
				"name": "Zarafa IMAP",
				"host": "10.200.200.25",
				"port": 443,
				"protocol": "tcp"
			},
			{
				"name": "Zarafa CalDAV",
				"host": "zarafa-caldav",
				"port": 8443,
				"protocol": "tcp"
			}

		]
	},
	"disk": {
		"show_tmpfs": true,
		"show_filesystem": true
	},
	"ping": {
		"hosts": [
			"mail.i.opw.ie",
			"activesync.opw.ie"
		]
	},
	"last_login": {
		"max": 5
	},
	"processes": {
		"max": 10,
		"sort": "cpu",
		"include": ["mysql","apache2","nginx"],
		"exclude": ["python","sublime", "games"]
	}	
}
