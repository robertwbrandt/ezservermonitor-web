{
    "esm": {
        "version": "2.5",
        "website": "http://www.ezservermonitor.com",
        "check_updates": false,
        "auto_refresh": 15,
        "theme": "light",
        "custom_title": "OPW Zarafa Dashboard"
    },
    "cpu": {
                "enable": false,
        "enable_temperature": false
    },
    "services": {
        "show_port": true,
        "list": [
            {
                "name": "Database Server",
                "host": "localhost",
                "port": 3306,
                "protocol": "tcp"
            },      
            {
                "name": "Zarafa Server",
                "host": "localhost",
                "port": 236,
                "protocol": "tcp"
            },
            {
                "name": "Email Server (incoming)",
                "host": "localhost",
                "port": 25,
                "protocol": "tcp"
            },
            {
                "name": "Email Server (outgoing)",
                "host": "localhost",
                "port": 587,
                "protocol": "tcp"
            },
            {
                "name": "Zarafa Web",
                "host": "10.200.200.25",
                "port": 443,
                "protocol": "tcp"
            },
            {
                "name": "Zarafa Activesync",
                "host": "10.200.200.30",
                "port": 443,
                "protocol": "tcp"
            },
            {
                "name": "Zarafa IMAP",
                "host": "10.200.200.25",
                "port": 443,
                "protocol": "tcp"
            },
            {
                "name": "Zarafa CalDAV",
                "host": "zarafa-caldav",
                "port": 8443,
                "protocol": "tcp"
            }

        ]
    },
    "disk": {
        "show_tmpfs": false,
        "show_filesystem": false
    },
    "ping": {
        "hosts": [
            "mail.i.opw.ie",
            "activesync.opw.ie"
        ]
    },
    "last_login": {
        "enable": false,
        "max": 5
    }
}
