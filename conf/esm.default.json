{
    "esm": {
        "version": "2.5",
        "website": "http://www.ezservermonitor.com",
        "product": "eZ Server Monitor",
        "favicon": "/favicon.ico",        
        "title": "{{esm:product}} - {{esm:hostname}}",
        "check_updates": true,
        "auto_refresh": 0,
        "theme": "blue",

        "logo": "esm-gauge",
        "logo_text": "eSM",
        "logo_href": "/index.php",

        "sublogo_text": "{{esm:product}} - v{{esm:version}}",
        "sublogo_href": "{{esm:website}}",

        "banner_top": "{{esm:hostname}}",
        "banner_bottom": "",

        "layout": [ 
            ["50-50",["system", "load_average"]],
            ["50-50",["network", "cpu"]],
            ["100",["disk"]],
            ["50-50",["memory","swap"]],
            ["33-33-33",["last_login","ping","services"]]
        ]        
    },
    "system": {
        "title": "System"
    },
    "load_average": {
        "title": "Load Average"
    },
    "network": {
        "title": "Network usage"
    },    
    "cpu": {
        "title": "CPU",
        "enable_temperature": true
    },
    "disk": {
        "title": "Disk usage",        
        "show_tmpfs": false,
        "show_filesystem": true
    },
    "memory": {
        "title": "Memory"
    },   
    "swap": {
        "title": "Swap"
    },
    "last_login": {
        "title": "Last login",        
        "max": 5
    },
    "ping": {
        "title": "Ping",
        "hosts": [
            "facebook.com",
            "google.com",
            "yahoo.com"
        ]
    },
    "services": {
        "title": "Network services",        
        "show_port": true,
        "list": [
            {
                "name": "Web Server",
                "host": "localhost",
                "port": 80,
                "protocol": "tcp"
            },
            {
                "name": "Email Server (incoming)",
                "host": "localhost",
                "port": 993,
                "protocol": "tcp"
            },
            {
                "name": "Email Server (outgoing)",
                "host": "localhost",
                "port": 587,
                "protocol": "tcp"
            },
            {
                "name": "FTP Server",
                "host": "localhost",
                "port": 21,
                "protocol": "tcp"
            },
            {
                "name": "Database Server",
                "host": "localhost",
                "port": 3306,
                "protocol": "tcp"
            },
            {
                "name": "SSH",
                "host": "localhost",
                "port": 22,
                "protocol": "tcp"
            }
        ]
    },
    "processes": {
        "max": 10,
        "sort": "cpu",
        "include": ["mysql","apache2","nginx"],
        "exclude": ["python","sublime", "games"]
    }       
}