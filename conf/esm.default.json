{
    "esm": {
        "version": "2.5",
        "website": "http://www.ezservermonitor.com",
        "product": "eZ Server Monitor",
        "favicon": "/favicon.ico",        
        "title": "{{esm:product}} - {{esm:hostname}}",
        "check_updates": true,
        "auto_refresh": 0,
        "theme": "blue",

        "logo": "esm-gauge",
        "logo_text": "eSM",
        "logo_href": "/index.php",

        "sublogo_text": "{{esm:product}} - v{{esm:version}}",
        "sublogo_href": "{{esm:website}}",

        "banner_top": "{{esm:hostname}}",
        "banner_bottom": "",

        "layout": [ 
            ["50-50",["system", "load_average"]],
            ["50-50",["network", "cpu"]],
            ["100",["disk"]],
            ["50-50",["memory","swap"]],
            ["33-33-33",["last_login","ping","services"]]
        ]        
    },

    "system": {
        "title": "System",
        "plugin": "system"
    },
    "load_average": {
        "title": "Load Average",
        "plugin": "load_average"
    },
    "network": {
        "title": "Network usage",
        "plugin": "network"
    },    
    "cpu": {
        "title": "CPU",
        "plugin": "cpu"
    },
    "disk": {
        "title": "Default usage",
        "plugin": "disk"
    },
    "memory": {
        "title": "Memory",
        "plugin": "memory"
    },   
    "swap": {
        "title": "Swap",
        "plugin": "swap"
    },
    "last_login": {
        "title": "Last login",
        "plugin": "last_login"
    },
    "ping": {
        "title": "Ping",
        "plugin": "ping"
    },
    "services": {
        "title": "Network services",
        "plugin": "services"
    },
    "processes": {
        "title": "Processes",
        "plugin": "processes"
    },
    "deamons": {
        "title": "Deamons",
        "plugin": "deamons"
    }
}
