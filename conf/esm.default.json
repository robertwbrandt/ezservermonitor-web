{
    "esm": {
        "version": "2.5",
        "website": "http://www.ezservermonitor.com",
        "product": "eZ Server Monitor",
        "favicon": "/favicon.ico",        
        "title": "{{esm:product}} - {{esm:hostname}}",
        "check_updates": true,
        "auto_refresh": 0,
        "theme": "blue",

        "logo": "esm-gauge",
        "logo_text": "eSM",
        "logo_href": "/index.php",

        "sublogo_text": "{{esm:product}} - v{{esm:version}}",
        "sublogo_href": "{{esm:website}}",

        "banner_1": "{{esm:hostname}}",
        "banner_2": ""
    },
    "cpu": {
        "enable": true,
        "enable_temperature": true
    },
    "disk": {
        "enable": true,        
        "show_tmpfs": false,
        "show_filesystem": true
    },
    "ping": {
        "enable": true,        
        "hosts": [
            "facebook.com",
            "google.com",
            "yahoo.com"
        ]
    },
    "last_login": {
        "enable": true,
        "max": 5
    },
    "services": {
        "enable": true,        
        "show_port": true,
        "list": [
            {
                "name": "Web Server",
                "host": "localhost",
                "port": 80,
                "protocol": "tcp"
            },
            {
                "name": "Email Server (incoming)",
                "host": "localhost",
                "port": 993,
                "protocol": "tcp"
            },
            {
                "name": "Email Server (outgoing)",
                "host": "localhost",
                "port": 587,
                "protocol": "tcp"
            },
            {
                "name": "FTP Server",
                "host": "localhost",
                "port": 21,
                "protocol": "tcp"
            },
            {
                "name": "Database Server",
                "host": "localhost",
                "port": 3306,
                "protocol": "tcp"
            },
            {
                "name": "SSH",
                "host": "localhost",
                "port": 22,
                "protocol": "tcp"
            }
        ]
    }
}